@{
    ViewBag.Title = "Home Page";
}

<p></p>

<div class="container">
        <h2 class="bg-primary text-white text-center">Welcome to Centric's Employee Recognition Homepage!</h2>
</div>

<div class="container">
    <h2>How it works:</h2>
    <p>
        This is where employees can give recognition to others for exhibiting Centric's core values.<br />
        If you notice other employees exhibiting Centric's core values, give them a recognition.<br />
        To check Centric's core values, @Html.ActionLink("click here.", "CoreValues", "Home")
    </p>
</div>

<div class="container">
    <h2>Centric Links</h2>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="~/Images/centric.jpg" alt="Centric" style="height:800px;">
                <div class="carousel-caption">
                    <h3>Centric Main Website</h3>
                    <h4><a href="https://centricconsulting.com/">Click Here to Visit</a></h4>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/location.jpg" alt="Location" style="height:800px;">
                <div class="carousel-caption">
                    <h3>Our Locations</h3>
                    <h4><a href="https://centricconsulting.com/locations/">Click Here to Visit</a></h4>
                </div>
            </div>

            <div class="item">
                <img src="~/Images/linkedin.png" alt="LinkedIn" style="height:800px;">
                <div class="carousel-caption">
                    <h3>Follow Us on LinkedIn</h3>
                    <h4><a href="https://www.linkedin.com/company/centric-consulting">Click Here to Visit</a></h4>
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


